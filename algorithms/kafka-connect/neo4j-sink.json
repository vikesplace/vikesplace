{
  "name": "kafka-neo4j-sink",
  "config": {
    "connector.class": "streams.kafka.connect.sink.Neo4jSinkConnector",
    "tasks.max": "1",
    "topics": "users_topic, listings_topic",
    "neo4j.server.uri": "bolt://neo4j:7687",
    "neo4j.authentication.basic.username": "neo4j",
    "neo4j.authentication.basic.password": "neo4j_$3ng499",
    "transforms": "FlattenLocation",
    "transforms.FlattenLocation.type": "org.apache.kafka.connect.transforms.Flatten$Value",
    "transforms.FlattenLocation.delimiter": "_",
    "key.converter": "org.apache.kafka.connect.json.JsonConverter",
    "key.converter.schemas.enable": "false",
    "value.converter": "org.apache.kafka.connect.json.JsonConverter",
    "value.converter.schemas.enable": "false",
    "neo4j.topic.cypher.users_topic": "MERGE (u:User {id: 'user_' + toString(event.user_id)}) SET u += event",
    "neo4j.topic.cypher.listings_topic": "MERGE (l:Listing {id: 'listing_' + toString(event.listing_id)}) SET l += event, l.latitude = event.location_lat, l.longitude = event.location_lon"
  }
}
