{
  "index_patterns": ["users", "listings"],
  "template": {
    "settings": {
      "number_of_shards": 1,
      "number_of_replicas": 1
    },
    "mappings": {
      "dynamic_templates": [
        {
          "locations_as_geo_points": {
            "match_mapping_type": "double",
            "match": "loc*",
            "mapping": {
              "type": "geo_point"
            }
          }
        }
      ],
      "properties": {
        "lat_long": {
          "type": "geo_point"
        }
      }
    }
  }
}
